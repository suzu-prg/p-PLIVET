{
    "compilerOptions": {
        "module": "esnext",
        "target": "es5",
        "jsx": "react",
        "lib": ["esnext", "dom"],
        "moduleResolution": "node",
        "removeComments": false,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "allowSyntheticDefaultImports": true,
        "downlevelIteration": true
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ],
}